<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:elevation="2dp"
    android:layout_margin="12dp">


    <TextView android:id="@+id/subgoal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:visibility="invisible"/>

    <TextView android:id="@+id/subgoal_item_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView android:id="@+id/subgoal_item_goal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Name"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentLeft="true"/>
    <TextView android:id="@+id/subgoal_item_goal_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02-Aug-2017"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/subgoal_item_goal_name"/>

    <ImageView android:id="@+id/subgoal_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_brightness_1_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="80dp"/>

    <ImageView android:id="@+id/subgoal_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create_black_24dp"
        android:layout_toRightOf="@+id/subgoal_item_status"
        android:layout_centerVertical="true"/>

    <ImageView android:id="@+id/subgoal_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        />

</RelativeLayout>