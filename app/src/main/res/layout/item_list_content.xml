<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="6dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/list_item_goalId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/list_item_goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignParentLeft="true"
            android:text="Expertise in Android Dev."/>

        <TextView
            android:id="@+id/list_item_goal_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_margin"
            android:text="Personal"/>

    <TextView
        android:id="@+id/list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_item_goal_name"
        android:text="24-Jul-2017 to 15-Aug-2017"/>

        <TextView
            android:id="@+id/list_item_goal_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_below="@+id/list_item_goal_category"
            android:text="Days"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progress="50"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:layout_below="@+id/list_item_date"
        android:max="100"
        android:indeterminate="false"/>

    </RelativeLayout>
</FrameLayout>