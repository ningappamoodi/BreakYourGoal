<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"

    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_goalId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/list_item_goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:text="Expertise in Android Dev."
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorPurpleDark"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/list_item_goal_name"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:text="24-Jul-17 to 15-Aug-17"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/colorGrey" />


        <ImageView
            android:id="@+id/list_item_goal_status_inprogress_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/list_item_date"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="2dp"
            android:tint="@color/colorOrange"
            app:srcCompat="@drawable/ic_brightness_1_black_24dp" />

        <TextView
            android:id="@+id/list_item_goal_status_inprogress_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/list_item_goal_status_inprogress_img"
            android:text="20" />

        <ImageView
            android:id="@+id/list_item_goal_status_completed_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/list_item_goal_status_inprogress_txt"
            android:tint="@color/colorGreen"
            app:srcCompat="@drawable/ic_brightness_1_black_24dp" />

        <TextView
            android:id="@+id/list_item_goal_status_completed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/list_item_goal_status_completed_img"
            android:text="7" />

        <ImageView
            android:id="@+id/list_item_goal_status_open_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/list_item_goal_status_completed_txt"
            app:srcCompat="@drawable/ic_brightness_1_black_24dp" />

        <TextView
            android:id="@+id/list_item_goal_status_open_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/list_item_goal_status_open_img"
            android:text="10" />


        <TextView
            android:id="@+id/list_item_goal_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/list_item_goal_status_open_txt"
            android:text="Personal"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/colorGrey" />

        <TextView
            android:id="@+id/list_item_goal_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_date"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/list_item_goal_category"
            android:text="Days"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/colorGrey"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/list_item_goal_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="50%"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/goal_item_percentage_text"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>