<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/item_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.moodi.breakyourgoal.ItemDetailFragment"
    android:layout_marginTop="4dp">

    <TextView android:id="@+id/goal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <FrameLayout android:id="@+id/item_detail_frame_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:elevation="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:id="@+id/item_detail_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"/>

        <TextView android:id="@+id/item_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-Aug-2017 to 20-Aug-2017"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/item_detail_date_label"
            />

            <TextView android:id="@+id/item_dtail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Learn"/>

            <TextView android:id="@+id/item_dtail_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weeks"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_dtail_category"
                />

        </RelativeLayout>


    </FrameLayout>

    <FrameLayout android:id="@+id/item_detail_frame_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:elevation="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/item_detail_frame_1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/item_detail_subgoal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sub goals"/>
            <TextView android:id="@+id/item_detail_subgoal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/item_detail_subgoal_label"
                android:text="20"/>

        </RelativeLayout>





    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_detail_frame_2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="itemAddSubGoal"
        android:background="@color/colorPrimary"
        android:text="Add subgoal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/item_detail_list"
        />

</RelativeLayout>
