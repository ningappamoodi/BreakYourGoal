<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView android:id="@+id/goal_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:text="Goal Title"
        android:textColor="@color/colorGrey"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/goal_detail_start_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:text="Start Date"
        android:textColor="@color/colorGrey"
        android:textSize="15dp"
        android:layout_below="@+id/goal_detail_title"
        />

    <TextView android:id="@+id/item_detail_goal_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-Aug-2017"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/goal_detail_start_date_label"

        />


    <TextView android:id="@+id/goal_detail_end_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorGrey"
        android:text="End Date"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/goal_detail_title"
        />





        <TextView android:id="@+id/item_detail_goal_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-Aug-2017"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/goal_detail_end_date_label"
            />

    <TextView android:id="@+id/item_detail_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/item_detail_goal_from_date"
        android:textColor="@color/colorGrey"
        android:textSize="15dp"
        android:text="Category"/>


        <TextView android:id="@+id/item_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/item_detail_category_label"
            android:text="Learn"/>


    <TextView android:id="@+id/item_detail_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_detail_goal_from_date"
        android:layout_toLeftOf="@+id/item_detail_duration"
        android:textColor="@color/colorGrey"

        />

        <TextView android:id="@+id/item_detail_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weeks"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_detail_duration_label"

            />

</RelativeLayout>